@model CRMProject.ViewModels.Admin.TaskUserIdSelectModel
<div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12 @Html.ModelStateFor(m => m.UserId)">
    <div class="input-group input-group-sm">
        <span class="input-group-addon as-label required">
            <strong> @Html.DisplayNameFor(m => m.UserId)</strong>
        </span>

        @Html.DropDownListFor(a=>a.UserId, new SelectList((List<CRMProject.ViewModels.Admin.UserViewModel>)ViewData["Users"], "Id", "Name"), new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
</div>