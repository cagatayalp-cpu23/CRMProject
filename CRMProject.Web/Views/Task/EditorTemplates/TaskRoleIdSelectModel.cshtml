@model CRMProject.ViewModels.Admin.TaskRoleIdSelectModel
<div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12 @Html.ModelStateFor(m => m.RoleId)">
    <div class="input-group input-group-sm">
        <span class="input-group-addon as-label required">
            <strong> @Html.DisplayNameFor(m => m.RoleId)</strong>
        </span>

        @Html.DropDownListFor(a=>a.RoleId, new SelectList((List<CRMProject.ViewModels.Admin.RoleViewModel>)ViewData["Roles"], "Id", "Name"), new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
</div>
